@model WEB_projekat.Models.Employee

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Kreiranje službenika";
}

<div class="form-container">
    <div class="form-box">
        <h2>Kreiranje novog službenika</h2>

        @if (ViewBag.Error != null)
        {
            <p class="msg-error">@ViewBag.Error</p>
        }

        <form method="post" action="/Admin/CreateEmployee">
            <label>Korisničko ime:</label>
            <input type="text" name="Username" required /><br />

            <label>Lozinka:</label>
            <input type="password" name="Password" required /><br />

            <label>JMBG:</label>
            <input type="text" name="JMBG" maxlength="13" required /><br />

            <label>Ime:</label>
            <input type="text" name="FirstName" required /><br />

            <label>Prezime:</label>
            <input type="text" name="LastName" required /><br />

            <label>Datum rođenja (dd/MM/yyyy):</label>
            <input type="text" name="BirthDate" required />
            <small class="form-hint">Format: dd/MM/yyyy</small>
            <br />

            <label>Email:</label>
            <input type="email" name="Email" required /><br />

            <div class="form-actions">
                <input type="submit" value="Kreiraj" class="btn" />
                <a href="/Admin/Employees" class="btn">Nazad na listu</a>
            </div>
        </form>
    </div>
</div>
